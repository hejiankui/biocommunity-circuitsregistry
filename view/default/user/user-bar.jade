.user-bar
  .user-bar-inner
    - if (user.uid)
      .user-avatar
        - if (user.avatar_resource_id > 0)
          img(src=resurl[user.avatar_resource_id])
        - else
          img(src='/static/img/user/def-avatar.png')
      .user-notification.user-block
        - if (user.new_notification > 0)
          .notification
            span= user.new_notification
        - else
          .notification.normal
            span 0
      .user-name.user-block
        a(href='/user')= user.showname
    - else
      .user-login
        a.btn(href='/user/login?url=' + base.url)= lang.user.login